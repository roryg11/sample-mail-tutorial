List of Members in the group
<% @memberships.each do |m|%>
  <%= m.user.first_name%>
  <%= m.user.last_name%>
  <%= m.user.email%>
  <%= m.membership_type %>
<%end %>

<p>Add more users </p>

<div class="well">
  <%= form_for([@user_groups, @membership], html: {class:"form-inline"}) do |f| %>
    <div class="form-group">
      <%= f.text_field, @membership.user.email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.select :role, ["member", "owner"], {include_blank: "role"}, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Add New Member", class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
